---

<Layout title="Wise energy">
  <main>
    <HeroHeader
      bg={hero.bg}
      title={hero.title}
      subtitle={hero.subtitle}
      text={hero.text}
      button_link={hero.button_link}
      image={hero.image}
      img_opacity={0.5}
      img_has_cover={"hero-img-cover-bordo"}
    />
    <section class="py-20 bg-neutral-200">
      <div class="container wrapper">
        <div class="files files-container">
          <div class="files-header rounded-t-lg bg-bordo-100/20 py-8 px-14">
            <p class="small text-bordo-300">Dokumenty do pobrania</p>
          </div>
          <div class="files-body">
            {
              getFiles.map((item) => (
                <>
                  <div class="py-6 px-14 bg-bordo-100/40 text-bordo-300">
                    <p>{item.year}</p>
                  </div>
                  {item.files.map((file) => (
                    <div class="py-6 px-14 lg:flex items-center justify-between bg-white even:bg-bordo-100/10 ">
                      <div class="mb-4 lg:mb-0">
                        <p class="small text-bordo-300">{file.title}</p>
                      </div>

                      <div class="flex items-center">
                        <a href={file.fileLink} class="pr-4">
                          <FileIcon />
                        </a>
                        <a href={file.fileLink} class="link text-bordo-100">
                          Pobierz dokument
                        </a>
                      </div>
                    </div>
                  ))}
                </>
              ))
            }
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

