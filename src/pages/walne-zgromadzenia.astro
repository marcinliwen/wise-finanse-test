                  <p class="small text-bordo-300">{item.title}</p>
                </div>

                <div class="flex items-center">
                  <a href={item.fileLink} class="pr-4">
                    <FileIcon />
                  </a>
                  <a href={item.fileLink} class="link text-bordo-100">
                    Pobierz dokument
                  </a>
                </div>
              </div>
            ))
