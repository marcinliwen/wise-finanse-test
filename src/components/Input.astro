---
const { id, label, placeholder, name, type, error, className } = Astro.props;
---

<div
  class={`relative custom-input ${error ? "error" : ""} ${
    className && className
  }`}
>
  <input id={id} type={type} name={name} placeholder={placeholder} />
  <label for={id}>{label}</label>
  {
    error && (
      <span class="flex gap-2 items-center">
        <svg
          width="10"
          height="10"
          viewBox="0 0 10 10"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <g clip-path="url(#clip0_156_1721)">
            <path
              d="M9.79183 0.208328L0.208496 9.79166"
              stroke="#B00000"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
            <path
              d="M9.79183 9.79166L0.208496 0.208328"
              stroke="#B00000"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
          </g>
          <defs>
            <clipPath id="clip0_156_1721">
              <rect width="10" height="10" fill="white" />
            </clipPath>
          </defs>
        </svg>
        <p class="error text-error">{error}</p>
      </span>
    )
  }
</div>
