---
const {
  image,
  img_has_cover,
  title,
  subtitle,
  text,
  bg,
  textdark,
  video,
  button_link,
  date,
  imageContent,
} = Astro.props;
---

<section
  style={`${bg && "background:" + bg}  `}
  class={`bg-bordo-100 pt-52 pb-28 relative ${
    img_has_cover ? img_has_cover : ""
  }`}
>
  <div
    class={`container wrapper ${
      textdark ? "text-bordo-100" : "text-white"
    } lg:flex relative z-20 inView slideUp`}
  >
    <div class="max-w-[482px] flex-1 mb-8 lg:mb-0">
      <h1 class="mb-4 lagusans">{title}</h1>
      <h2 class="victorserif mb-8">{subtitle}</h2>
      {
        button_link && (
          <a
            class={`btn ${textdark ? "primary" : "secondary"}`}
            href={button_link}
          >
            Czytaj wiÄ™cej
          </a>
        )
      }
    </div>
    <div class="max-w-[648px] lg:ml-12">
      <p class={`small ${textdark && "text-bordo-300"}`}>
        {text}
      </p>
    </div>
  </div>
  {
    image && !video && (
      <img
        src={image}
        class="absolute left-0 top-0 w-full h-full object-cover"
      />
    )
  }
  {
    video && (
      <video
        autoplay="true"
        playsinline=""
        loop=""
        controlslist="nodownload"
        poster="https://c.stocksy.com/a/XhRK00/z9/4873047.jpg"
        src="https://c.stocksy.com/a/XhRK00/y0/4873047.mp4"
        class="w-full h-full absolute top-0 left-0 object-cover z-10"
        muted=""
      />
    )
  }
</section>
